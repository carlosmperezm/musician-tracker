<html>
<%- include("partials/navbar.ejs") %>
    <% if(locals.singer){ %>
        <h1>Update Singer</h1>
        <form method="post" action="/singers/new">
            <label>
                Name: (more than 2 characters)
                <input name="singerName" pattern="^[a-zA-Z]+.*\S$" value="<%=singer.name%>" required></input>
            </label>
            <button type="submit">Update singer</button>
        </form>
        <%}else{%>
            <h1>Add new singer</h1>
            <form method="post" action="/singers/new">
                <label>
                    Name: (more than 2 characters)
                    <input name="singerName" pattern="^[a-zA-Z]+.*\S$" required></input>
                </label>
                <button type="submit">Add singer</button>
            </form>

            <%}%>

</html>